<!DOCTYPE html>
<html ng-app="nameApp1">  
<head>    
<title>Successful Login</title>    
 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css"> 
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js"></script>
  <script>
      var nameApp1 = angular.module('nameApp1', []);
      nameApp1.controller('NameCtrl1', function ($scope){
        $scope.names = [];
        $scope.addName = function() {
        $scope.names.push($scope.enteredName);
        $scope.enteredName="";
        };
        $scope.removeName = function(name){
        var i = $scope.names.indexOf(name);
        $scope.names.splice(i, 1);
        };
      });
 </script>
</head>  
<body ng-controller="NameCtrl1">
 

       <h2>HomePage of twitter</h2>
       <%if((typeof name1 != 'undefined') && name1 != ""){%>
       <h6>Welcome <%=name1%></h6>
       <%}%>
                                      
<div align="right">
   <nav id="nav">
   <ul id="navigation">
      <ul>
        <form action="/search">
     	 
		<input id="search" name="search" type="search" placeholder="Search Twitter">
		<button type="submit">Search</button>
		</form>
        <p><a href="/profile">View Profile</a></p>       
        <p><a href="/logout">Log Out</a></p>
      </ul>
  </ul>
</nav>
</div>

<div id='main' class="container">
      <div class="col-md-offset-2 col-md-8">
        <div class="clearfix">
          <form action="/insertTweet">          
            <textarea required ng-model="enteredName" class="form-control" maxlength="140" rows="3" placeholder="What's happening?" name="tweet_box"></textarea>
            <input class="btn submit-btn pull-right" type="submit" value="Tweet!" />
          </form>
        </div>
      </div>
    </div>
    
    <div align="center">
    
   
    <%if((typeof tweets != 'undefined') && tweets != ""){%>
    <% for(var i = 0; i < tweets.length; i++){ %>
    <form action="/retweet" method="get">
    <%if((typeof tweet_time != 'undefined') && tweet_time != ""){%>
    <p>@<%=tweets[i].user_name%> at <%= tweet_time[i]%></p>
    <% } %>
    <%if((typeof tweets[i].raw_text != 'undefined') && tweets[i].raw_text != ""){%>
    <p> <%= tweets[i].raw_text %> </p>   
    <button name="retweet" value="<%=tweets[i].ID%>" type="submit">Retweet</button>
    </form>
    <% } %>
	<% } %>
	<% } %>
	
	<%if((typeof noTweet != 'undefined') && noTweet != ""){%>
	<h3><%=noTweet%></h3>
	<% } %>
	</div>
	

	<div style="float:right;">
	
	 <%if((typeof users != 'undefined') && users != ""){%>
    <% for(var i = 0; i < users.length; i++){ %>
     <form action="/follow_user" method="get">  
  <!--   <form action="/userprofile/<%= users[i]%>"> --> 
     <a name="user" value="<%= users[i]%>" href="/userprofile/<%= users[i]%>"><%= users[i] %> </a><br/> 
  	<!-- <button name="user" value="<%= users[i]%>" type="submit"><%= users[i]%></button> -->
	 <button name="follow" value="<%= users[i]%>" type="submit">Follow</button> 
	 <!-- </form> -->	
	 </form> 
	<% } %>
	<% } %>
	</div>


</body>
</html> 
